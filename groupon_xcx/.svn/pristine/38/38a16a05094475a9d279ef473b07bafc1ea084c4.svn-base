/**index.wxss**/
.main {background-color: #c0271f;}
.main .banner-box{height: 600rpx;}
.main .banner-box swiper{height: 100%;}
.main .banner-box .slide-image{width: 100%;height: 100%;}
.main .banner-box .wx-swiper-dot{margin-bottom: 150rpx; display: inline-flex;margin-left: 2rpx;justify-content:space-between;}
.main .banner-box .wx-swiper-dot::before{content: '';flex-grow: 1;  background: rgba(255,255,255,0.8);border-radius: 50%}
.main .banner-box .wx-swiper-dot-active::before{background:rgba(244,0,0,0.8);}

.main .but-list{position: relative;z-index: 1; margin-top: -150rpx; display: flex;justify-content:space-between;padding: 0 60rpx;}
.main .but-list .li .image{width: 88rpx;margin: 0 auto;display: block;}
.main .but-list .li .span{font-size: 26rpx;color: #fff;display: block;text-align: center;padding-top: 10rpx;padding-bottom: 30rpx;}
.main .selected-list{padding: 9rpx 17rpx 30rpx;}
.main .selected-list .h5{text-align: center;margin-top: 17rpx;}
.main .selected-list .h5 .txt{vertical-align:middle;font-size: 30rpx;color: #fff;font-weight: 400;display: inline-block;line-height: 1;}
.main .selected-list .h5 .i{vertical-align:middle;width: 5rpx;height: 26rpx;background-color: #fff;display: inline-block;margin-right: 20rpx;}
.main .selected-list .list-box{background-color: #fff;border-radius: 8rpx;padding: 14rpx;margin-top:17rpx;}
.main .selected-list .list-box .img-box {margin: 0 auto;position: relative;}
.main .selected-list .list-box .img-box image{width: 690rpx;height: 340rpx;}
.main .selected-list .list-box .img-box .time{position: absolute;left: 20rpx;bottom: 32rpx;}
.main .selected-list .list-box .img-box .time text{font-size: 26rpx;line-height: 40rpx;color: #fff;padding:4rpx 20rpx;background-color: #2d0b00;border-radius: 5rpx;margin-right: 10rpx;}
.main .selected-list .list-box .txt-box:after{content: "";display: block;clear: both;}
.main .selected-list .list-box .txt{float: left;padding: 0 20rpx;}
.main .selected-list .list-box .txt .title{display: inline;font-size: 26rpx;color: #1c0f0b;font-weight: bold;}
.main .selected-list .list-box .txt .tab{display: inline;font-size: 18rpx;color: #fff;background-color: #ff9879;padding: 4rpx 6rpx;margin-left: 40rpx; border-radius: 4rpx;}
.main .selected-list .list-box .txt .info{font-size: 22rpx;color: #666666;padding-bottom: 10rpx;}
.main .selected-list .list-box .txt .money .a{font-size: 36rpx;color: #f5222d;font-weight: bold;}
.main .selected-list .list-box .txt .money .b{font-size: 24rpx;color: #b2b2b2;text-decoration:line-through;margin-left: 30rpx;}
.main .selected-list .list-box .start{float: right;width: 180rpx;height: 116rpx;margin-top: 16rpx;}
.main .selected-list .list-box .start .n{display: block;text-align: center;font-size: 22rpx;line-height: 52rpx;color: #666666;padding: 0rpx 0;border: 1px solid #ff4912;box-sizing: border-box;}
.main .selected-list .list-box .start .s{display: block;text-align: center;font-size: 30rpx;color: #fff;background-color: #ff4912;padding: 10rpx 0;border: 1px solid #ff4912;box-sizing: border-box;}

